    <style>
        /* --- Basic Setup & Typography --- */
        :root {
            --primary-color: #0077ff;
            --background-color: #f0f0f0;
            --text-color: #111111;
            --secondary-text-color: #555555;
            --card-bg-color: rgba(255, 255, 255, 0.6);
        }

        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            overflow-x: hidden;
            cursor: none; /* Hide default cursor */
        }
        
        /* --- Custom Cursor --- */
        .cursor {
            position: fixed;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background-color: var(--primary-color);
            pointer-events: none;
            transform: translate(-50%, -50%);
            z-index: 9999;
            transition: width 0.3s, height 0.3s, background-color 0.3s;
        }
        .cursor.hover {
            width: 40px;
            height: 40px;
            background-color: rgba(0, 119, 255, 0.5);
        }

        /* --- Floating Navigation Bar --- */
        nav {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            width: 90%;
            max-width: 1100px;
            padding: 0.75rem 2rem;
            box-sizing: border-box;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000;
            background: rgba(240, 240, 240, 0.7);
            backdrop-filter: blur(10px);
            border-radius: 50px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        nav .logo {
            font-weight: 700;
            font-size: 1.5rem;
        }
        nav .nav-links {
            display: flex;
            align-items: center;
            gap: 2rem;
        }
        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 2rem;
        }
        nav a {
            text-decoration: none;
            color: var(--text-color);
            font-weight: 500;
            transition: color 0.3s;
            position: relative;
        }
        nav a:hover {
            color: var(--primary-color);
        }
        nav a.active {
            color: var(--primary-color);
        }
        .resume-btn {
            background: linear-gradient(45deg, #0077ff, #8e44ad);
            color: white;
            padding: 0.6rem 1.5rem;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 500;
            transition: transform 0.3s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .resume-btn:hover {
            transform: scale(1.05);
            color: white;
        }
        
        /* --- Mobile Navigation --- */
        .mobile-nav-toggle {
            display: none;
            z-index: 9999;
            background: none;
            border: none;
        }
        .mobile-nav {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(240, 240, 240, 0.95);
            backdrop-filter: blur(10px);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            transform: translateX(100%);
            transition: transform 0.3s ease-in-out;
            z-index: 9998;
        }
        .mobile-nav.open {
            transform: translateX(0);
        }
        .mobile-nav ul {
            list-style: none;
            padding: 0;
            text-align: center;
        }
        .mobile-nav li {
            margin: 2rem 0;
        }
        .mobile-nav a {
            font-size: 2rem;
            text-decoration: none;
            color: var(--text-color);
        }

        /* --- Canvas for 3D Object --- */
        #bg-canvas {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            outline: none;
        }

        /* --- Content Sections --- */
        .content-section {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            width: 100%;
            padding: 120px 5% 60px;
            box-sizing: border-box;
            position: relative;
        }

        .content-wrapper {
            max-width: 900px;
            text-align: center;
            width: 100%;
        }
        
        /* --- Text Styling & Animation Setup --- */
        h1 { font-size: clamp(2.5rem, 8vw, 4.5rem); font-weight: 700; letter-spacing: -0.02em; margin: 0; }
        h2 { 
            font-size: clamp(2rem, 7vw, 3.5rem); 
            font-weight: 700; 
            margin-bottom: 3rem;
            background: linear-gradient(45deg, #0077ff, #ff00aa);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            -webkit-text-stroke: 1px rgba(0,0,0,0.2);
        }
        p { font-size: clamp(1rem, 2.5vw, 1.1rem); line-height: 1.8; max-width: 700px; margin: 0 auto 1.5rem auto; color: var(--secondary-text-color); }
        .highlight { color: var(--primary-color); }
        
        .contact-link {
            display: inline-block;
            padding: 12px 24px;
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            text-decoration: none;
            border-radius: 50px;
            transition: background-color 0.3s, color 0.3s;
            font-weight: 500;
        }
        .contact-link:hover { background-color: var(--primary-color); color: #f0f0f0; }
        
        .card-wrapper {
            transition: transform 0.3s ease-out, box-shadow 0.3s ease-out;
            padding: 2.5rem;
            border-radius: 15px;
            background-color: var(--card-bg-color);
            backdrop-filter: blur(10px);
            margin-bottom: 2rem;
            text-align: left;
        }
        .card-wrapper:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 119, 255, 0.15);
        }
        
        /* --- About Section with Image --- */
        .about-content {
            display: flex;
            align-items: center;
            gap: 3rem;
            text-align: left;
        }
        .about-content img {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid var(--primary-color);
        }

        /* --- Skills Section --- */
        .skills-container {
            width: 100%;
            text-align: left;
        }
        .skill-category-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-top: 2rem;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid rgba(0,0,0,0.1);
        }
        .skills-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
            gap: 1.5rem;
            perspective: 1000px;
        }
        .skill-card {
            background: var(--card-bg-color);
            border-radius: 15px;
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            transition: transform 0.3s, box-shadow 0.3s;
            will-change: transform;
        }
        .skill-card:hover {
            box-shadow: 0 10px 30px rgba(0, 119, 255, 0.2);
        }
        .skill-card svg {
            width: 48px;
            height: 48px;
            fill: var(--primary-color);
        }
        .skill-card h4 {
            margin: 0;
            font-size: 1rem;
            font-weight: 500;
            color: var(--text-color);
            text-align: center;
        }

        /* --- Experience Timeline --- */
        .timeline {
            position: relative;
            width: 100%;
            padding: 2rem 0;
        }
        .timeline::before {
            content: '';
            position: absolute;
            left: 50%;
            top: 0;
            bottom: 0;
            width: 2px;
            background: rgba(0,0,0,0.1);
            transform: translateX(-50%);
        }
        .timeline-item {
            position: relative;
            width: 50%;
            padding: 1rem 2rem;
            box-sizing: border-box;
        }
        .timeline-item:nth-child(odd) {
            left: 0;
            padding-right: 4rem;
            text-align: right;
        }
        .timeline-item:nth-child(even) {
            left: 50%;
            padding-left: 4rem;
            text-align: left;
        }
        .timeline-item::after {
            content: '';
            position: absolute;
            top: 2.5rem;
            width: 16px;
            height: 16px;
            background: var(--background-color);
            border: 3px solid var(--primary-color);
            border-radius: 50%;
            z-index: 1;
        }
        .timeline-item:nth-child(odd)::after {
            right: -8px;
        }
        .timeline-item:nth-child(even)::after {
            left: -8px;
        }
        .experience-item h3 { margin: 0 0 0.25rem 0; font-size: 1.5rem; color: var(--text-color);}
        .experience-item .date { color: var(--secondary-text-color); font-style: italic; margin-bottom: 1rem; }
        .experience-item ul { padding-left: 20px; }
        
        /* --- Achievements Section --- */
        .achievements-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
        }
        .achievement-item {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }
        .achievement-badge {
            width: 60px;
            height: 60px;
            flex-shrink: 0;
        }
        .achievement-text h3 {
            margin: 0 0 0.5rem 0;
            font-size: 1.2rem;
        }
        .achievement-text p {
            margin: 0;
            font-size: 1rem;
        }


        /* --- Floating Action Button (FAB) --- */
        .fab-container {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.3s, transform 0.3s;
        }
        .fab-container.visible {
            opacity: 1;
            transform: translateY(0);
        }
        .fab-icon {
            width: 50px;
            height: 50px;
            background-color: var(--primary-color);
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            transition: transform 0.3s;
        }
        .fab-icon:hover {
            transform: scale(1.1);
        }
        .fab-icon svg {
            fill: white;
            width: 24px;
            height: 24px;
        }

        /* --- Footer --- */
        footer {
            padding: 4rem 5% 2rem;
            background-color: #e0e0e0;
            text-align: left;
        }
        .footer-container {
            max-width: 1100px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid rgba(0,0,0,0.1);
        }
        .footer-column h3 {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }
        .footer-column p {
            font-size: 0.9rem;
            max-width: 100%;
        }
        .footer-column ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .footer-column ul li {
            margin-bottom: 0.5rem;
        }
        .footer-column a {
            text-decoration: none;
            color: var(--secondary-text-color);
            transition: color 0.3s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .footer-column a:hover {
            color: var(--primary-color);
        }
        .footer-bottom {
            text-align: center;
            padding-top: 2rem;
            font-size: 0.9rem;
            color: var(--secondary-text-color);
        }
        
        /* --- Responsive Design --- */
        @media (max-width: 768px) {
            .cursor {
                display: none;
            }
            body {
                cursor: auto;
            }
            nav .nav-links, nav .resume-btn {
                display: none;
            }
            nav .mobile-nav-toggle {
                display: block;
            }
            .about-content {
                flex-direction: column;
                text-align: center;
            }
            .timeline::before {
                left: 20px;
            }
            .timeline-item, .timeline-item:nth-child(even) {
                width: 100%;
                left: 0;
                padding-left: 4rem;
                text-align: left;
            }
            .timeline-item:nth-child(odd) {
                padding-right: 1rem;
            }
            .timeline-item::after, .timeline-item:nth-child(odd)::after, .timeline-item:nth-child(even)::after {
                left: 12px;
            }
            .achievements-grid {
                grid-template-columns: 1fr;
            }
            .achievement-item {
                flex-direction: column;
                text-align: center;
            }
        }

    </style>
